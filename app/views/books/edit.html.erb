<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      
      <%= form_with model: @book do |f| %>

      <h4>Title</h4>
       <%= f.text_field :title %>

      <h4>Opinion</h4>
       <%= f.text_area :body %>
       
       <div class="form-group">
         <input type="submit" name="commit" value="Update Book" class="btn btn-success"data-disable-with="Update Book">
       </div>

       <% end %>

      <%= link_to "/books/#{@book.id}" do %>
        Show|
      <% end %>

     <a href="/books">Back</a>
    </div>
  </div>
</div>
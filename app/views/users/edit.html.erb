<div class="containce">
  <div clas="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>

      <% if @user.errors.any? %>
 　     <%= @user.errors.count %> error prohibited this obj from being saved:

       <ul>
        <% @user.errors.full_messages.each do |message| %>
       <li><%= message %></li>
        <% end %>
       </ul>
      <% end %>

      <div class="form-group">
        <label for="user_name">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
      </div>

      <div class="form-group">
        <label>Image</label>
        <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
      </div>

      <div class="form-group">
        <label for="user_introduction">Introduction</label>
        <%= f.text_area :introduction %>
      </div>
      <%= f.submit "update User" %>

     <% end %>
    </div>
  </div>
</div>